gem 'coffee-rails', '~> 4.2'
gem 'turbolinks', '~> 5'
gem 'jbuilder', '~> 2.5'

# 餈質
gem 'jquery-rails'
gem 'bootstrap-sass'
gem 'slim-rails'
gem 'kaminari'
gem 'simple_form'
gem 'action_args'
gem 'seed-fu', '~> 2.3'
gem 'devise'
gem 'whenever', require: false

# option
gem 'ransack'
gem 'carrierwave'
gem 'mini_magick'
gem 'material_icons'
gem 'sidekiq'
gem 'enum_help'
gem 'redis'

group :development, :test do
  gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
  gem 'capybara', '~> 2.13'
  gem 'selenium-webdriver'
  #餈質
